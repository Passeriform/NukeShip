{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[Protobuf] Refresh",
            "type": "shell",
            "command": "protoc",
            "args": [
                "--go_out=.",
                "--go_opt=paths=source_relative",
                "--go-grpc_out=.",
                "--go-grpc_opt=paths=source_relative",
                "--proto_path=.",
                "./*.proto"
            ],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/internal/pb"
            }
        },
        {
            "label": "[Generate] Generate Go Code",
            "type": "shell",
            "command": "go",
            "args": [
                "generate",
                "-x",
                "./..."
            ],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "[Sanity] Ping Hosted gRPC server",
            "type": "shell",
            "command": "grpcurl",
            "args": [
                "-proto",
                "*.proto",
                "-H",
                "client-id: abcde",
                "${input:serverAddress}",
                "RoomService/CreateRoom",
            ],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/internal/pb"
            }
        },
        {
            "label": "[App] Post Debug Cleanup",
            "type": "process",
            "hide": true,
            "command": [
                "${command:workbench.action.tasks.terminate}",
                "${command:workbench.action.acceptSelectedQuickOpenItem}",
            ],
        },
        {
            "label": "[App] Build Client",
            "type": "shell",
            "command": "wails",
            "args": [
                "build",
                "-clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/pkg/client",
                "env": {
                    "SERVER_HOST": "${input:serverHost}",
                    "SERVER_PORT": "${input:serverPort}",
                    "ENABLE_TLS": "${input:enableTls}"
                }
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "[Protobuf] Refresh",
                "[Generate] Generate Go Code"
            ],
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "[App] Run Client",
            "type": "shell",
            "command": "wails",
            "args": [
                "dev"
            ],
            "options": {
                "cwd": "${workspaceFolder}/pkg/client",
                "env": {
                    "SERVER_HOST": "${input:serverHost}",
                    "SERVER_PORT": "${input:serverPort}",
                    "ENABLE_TLS": "${input:enableTls}"
                }
            },
            "isBackground": true,
            "dependsOrder": "sequence",
            "dependsOn": [
                "[Protobuf] Refresh",
                "[Generate] Generate Go Code"
            ],
            "problemMatcher": [
                {
                    "owner": "custom",
                    "pattern": {
                        "regexp": "__________________"
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".*",
                        "endsPattern": "To develop in the browser and call your bound Go methods from Javascript, navigate to: *"
                    }
                }
            ],
            "runOptions": {
                "instanceLimit": 2
            }
        },
        {
            "label": "[App] Run Debugger",
            "type": "shell",
            "command": "./dlv.ps1",
            "hide": true,
            "options": {
                "cwd": "${workspaceFolder}/.vscode"
            },
            "isBackground": true,
            "dependsOrder": "sequence",
            "dependsOn": [
                "[App] Run Client"
            ],
            "problemMatcher": [
                {
                    "owner": "custom",
                    "pattern": {
                        "regexp": "__________________"
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".*",
                        "endsPattern": "API server listening at: *"
                    }
                }
            ],
        },
        {
            "label": "[Server] [Local] Run Server",
            "type": "shell",
            "command": "go",
            "args": [
                "run",
                "."
            ],
            "problemMatcher": [
                "$go"
            ],
            "options": {
                "cwd": "${workspaceFolder}/pkg/server"
            },
            "isBackground": true,
            "dependsOrder": "sequence",
            "dependsOn": [
                "[Protobuf] Refresh",
                "[Generate] Generate Go Code"
            ]
        },
        {
            "label": "[Server] [Docker] Run Server",
            "type": "docker-compose",
            "dockerCompose": {
                "up": {
                    "build": true,
                    "services": [
                        "server"
                    ],
                    "customOptions": "--force-recreate --remove-orphans"
                },
                "files": [
                    "docker-compose.yml"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
        },
        {
            "label": "[Cli] [Local] Run Native Client - Create Room",
            "type": "shell",
            "command": "go",
            "problemMatcher": [
                "$go"
            ],
            "args": [
                "run",
                "-tags",
                "cli",
                ".",
                "createRoom"
            ],
            "options": {
                "cwd": "${workspaceFolder}/pkg/client",
                "env": {
                    "SERVER_HOST": "${input:serverHost}",
                    "SERVER_PORT": "${input:serverPort}",
                    "ENABLE_TLS": "${input:enableTls}"
                }
            },
            "isBackground": true,
        },
        {
            "label": "[Cli] [Local] Run Native Client - Join Room",
            "type": "shell",
            "command": "go",
            "problemMatcher": [
                "$go"
            ],
            "args": [
                "run",
                "-tags",
                "cli",
                ".",
                "joinRoom",
                "-code=${input:roomCode}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/pkg/client",
                "env": {
                    "SERVER_HOST": "${input:serverHost}",
                    "SERVER_PORT": "${input:serverPort}",
                    "ENABLE_TLS": "${input:enableTls}"
                }
            },
            "isBackground": true,
        }
    ],
    "inputs": [
        {
            "id": "roomCode",
            "description": "Room code to join",
            "type": "promptString"
        },
        {
            "id": "enableTls",
            "description": "Enable TLS",
            "type": "pickString",
            "options": [
                "true",
                "false"
            ],
            "default": "false"
        },
        {
            "id": "serverHost",
            "description": "Server Host",
            "type": "pickString",
            "options": [
                "localhost",
                "crazy-dania-passeriform-2c88993e.koyeb.app"
            ],
            "default": "localhost"
        },
        {
            "id": "serverPort",
            "description": "Server Port",
            "type": "pickString",
            "options": [
                "50051",
                "443"
            ],
            "default": "50051"
        },
        {
            "id": "serverAddress",
            "description": "Server Address",
            "type": "pickString",
            "options": [
                "nukeship.passeriform.com:443",
                "crazy-dania-passeriform-2c88993e.koyeb.app:443",
                "localhost:50051"
            ],
            "default": "crazy-dania-passeriform-2c88993e.koyeb.app:443"
        }
    ]
}