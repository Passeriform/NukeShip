{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Refresh protobuf",
            "type": "shell",
            "command": "protoc --go_out=${workspaceFolder}\\internal\\pb\\ --go_opt=paths=source_relative --go-grpc_out=${workspaceFolder}\\internal\\pb\\ --go-grpc_opt=paths=source_relative --proto_path=${workspaceFolder}\\internal\\pb\\ ${workspaceFolder}\\internal\\pb\\room.proto",
            "problemMatcher": []
        },
        {
            "label": "Spawn server",
            "type": "shell",
            "command": "go run ${workspaceFolder}/pkg/server/main.go",
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Spawn client",
            "type": "shell",
            "command": "go run ${workspaceFolder}/pkg/client/main.go",
            "problemMatcher": [
                "$go"
            ]
        }
    ]
}