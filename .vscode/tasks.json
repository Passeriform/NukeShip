{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "ENVIRONMENT": "PRODUCTION",
            "PORT": "50051",
            "SERVER_PORT": "50051",
            "HOST": "127.0.0.1",
            "SERVER_HOST": "127.0.0.1",
        }
    },
    "tasks": [
        {
            "label": "[Protobuf] Refresh",
            "type": "shell",
            "command": "protoc",
            "args": [
                "--go_out=.",
                "--go_opt=paths=source_relative",
                "--go-grpc_out=.",
                "--go-grpc_opt=paths=source_relative",
                "--proto_path=.",
                "./room.proto"
            ],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/internal/pb"
            }
        },
        {
            "label": "[App] Build Client",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/pkg/client"
            },
            "hide": true,
            "command": "wails",
            "args": [
                "build",
                "-tags",
                "gui"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "[Protobuf] Refresh"
            ]
        },
        {
            "label": "[NukeShip] [Local] Run Server",
            "type": "shell",
            "command": "go",
            "args": [
                "run",
                "."
            ],
            "problemMatcher": [
                "$go"
            ],
            "options": {
                "cwd": "${workspaceFolder}/pkg/server"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "[Protobuf] Refresh"
            ]
        },
        {
            "label": "[NukeShip] [Local] Run App Client",
            "type": "shell",
            "command": "wails",
            "args": [
                "dev",
                "-tags",
                "gui"
            ],
            "options": {
                "cwd": "${workspaceFolder}/pkg/client"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "[Protobuf] Refresh"
            ],
            "problemMatcher": [],
            "runOptions": {
                "instanceLimit": 2
            }
        },
        {
            "label": "[NukeShip] [Local] Run Native Client - Create Room",
            "type": "shell",
            "command": "go",
            "problemMatcher": [
                "$go"
            ],
            "args": [
                "run",
                "-tags",
                "cli",
                ".",
                "createRoom"
            ],
            "options": {
                "cwd": "${workspaceFolder}/pkg/client"
            }
        },
        {
            "label": "[NukeShip] [Local] Run Native Client - Join Room",
            "type": "shell",
            "command": "go",
            "problemMatcher": [
                "$go"
            ],
            "args": [
                "run",
                "-tags",
                "cli",
                ".",
                "joinRoom",
                "-code=${input:roomCode}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/pkg/client"
            }
        },
        {
            "label": "[NukeShip] [Docker] Run Server",
            "type": "docker-compose",
            "dockerCompose": {
                "up": {
                    "build": true,
                    "services": [
                        "server"
                    ],
                    "customOptions": "--force-recreate --remove-orphans"
                },
                "files": [
                    "docker-compose.yml"
                ],
                "envFile": ".env"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ],
    "inputs": [
        {
            "id": "roomCode",
            "description": "Room code to join",
            "type": "promptString"
        }
    ]
}