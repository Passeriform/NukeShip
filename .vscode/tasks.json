{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[Pre] Protobuf Refresh",
            "type": "shell",
            "command": "protoc",
            "args": [
                "--go_out=.",
                "--go_opt=paths=source_relative",
                "--go-grpc_out=.",
                "--go-grpc_opt=paths=source_relative",
                "--proto_path=.",
                "./*.proto"
            ],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/internal/pb"
            }
        },
        {
            "label": "[Pre] Generate Go Code",
            "type": "shell",
            "command": "go",
            "args": [
                "generate",
                "-x",
                "./..."
            ],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "[Lint] Format frontend code",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "lint:fix"
            ],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/pkg/client/frontend"
            }
        },
        {
            "label": "[Lint] Format go code",
            "type": "shell",
            "command": "golangci-lint",
            "args": [
                "fmt"
            ],
            "problemMatcher": [
                "$go"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "[Misc] Ping Hosted gRPC server",
            "type": "shell",
            "command": "grpcurl",
            "args": [
                "-proto",
                "room.proto",
                "-H",
                "client-id: abcde",
                "${input:serverAddress}",
                "RoomService/CreateRoom"
            ],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/internal/pb"
            }
        },
        {
            "label": "[Misc] Post Debug Cleanup",
            "type": "process",
            "hide": true,
            "command": [
                "${command:workbench.action.tasks.terminate}",
                "${command:workbench.action.acceptSelectedQuickOpenItem}"
            ]
        },
        {
            "label": "Build App [Local Server]",
            "type": "shell",
            "command": "wails",
            "args": [
                "build",
                "-clean",
                "-race",
                "-tags",
                "local_server"
            ],
            "options": {
                "cwd": "${workspaceFolder}/pkg/client"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "[Pre] Protobuf Refresh",
                "[Pre] Generate Go Code"
            ],
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Build App",
            "type": "shell",
            "command": "wails",
            "args": [
                "build",
                "-clean",
                "-race"
            ],
            "options": {
                "cwd": "${workspaceFolder}/pkg/client"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "[Pre] Protobuf Refresh",
                "[Pre] Generate Go Code"
            ],
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Run App [Local Server]",
            "type": "shell",
            "command": "wails",
            "args": [
                "dev",
                "-tags",
                "local_server"
            ],
            "options": {
                "cwd": "${workspaceFolder}/pkg/client"
            },
            "isBackground": true,
            "dependsOrder": "sequence",
            "dependsOn": [
                "[Pre] Protobuf Refresh",
                "[Pre] Generate Go Code"
            ],
            "problemMatcher": [
                {
                    "owner": "custom",
                    "pattern": {
                        "regexp": "__________________"
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".*",
                        "endsPattern": "To develop in the browser and call your bound Go methods from Javascript, navigate to: *"
                    }
                }
            ],
            "runOptions": {
                "instanceLimit": 2
            }
        },
        {
            "label": "Run App",
            "type": "shell",
            "command": "wails",
            "args": [
                "dev",
            ],
            "options": {
                "cwd": "${workspaceFolder}/pkg/client"
            },
            "isBackground": true,
            "dependsOrder": "sequence",
            "dependsOn": [
                "[Pre] Protobuf Refresh",
                "[Pre] Generate Go Code"
            ],
            "problemMatcher": [
                {
                    "owner": "custom",
                    "pattern": {
                        "regexp": "__________________"
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".*",
                        "endsPattern": "To develop in the browser and call your bound Go methods from Javascript, navigate to: *"
                    }
                }
            ],
            "runOptions": {
                "instanceLimit": 2
            }
        },
        {
            "label": "Debug App",
            "type": "shell",
            "command": "./dlv.ps1",
            "hide": true,
            "options": {
                "cwd": "${workspaceFolder}/.vscode"
            },
            "isBackground": true,
            "dependsOrder": "sequence",
            "dependsOn": [
                "Run App [Local Server]"
            ],
            "problemMatcher": [
                {
                    "owner": "custom",
                    "pattern": {
                        "regexp": "__________________"
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".*",
                        "endsPattern": "API server listening at: *"
                    }
                }
            ]
        },
        {
            "label": "Run Server [Local Server]",
            "type": "shell",
            "command": "go",
            "args": [
                "run",
                ".",
                "-tags",
                "local_server"
            ],
            "problemMatcher": [
                "$go"
            ],
            "options": {
                "cwd": "${workspaceFolder}/pkg/server"
            },
            "isBackground": true,
            "dependsOrder": "sequence",
            "dependsOn": [
                "[Pre] Protobuf Refresh",
                "[Pre] Generate Go Code"
            ]
        },
        {
            "label": "Run Server",
            "type": "shell",
            "command": "go",
            "args": [
                "run",
                "."
            ],
            "problemMatcher": [
                "$go"
            ],
            "options": {
                "cwd": "${workspaceFolder}/pkg/server"
            },
            "isBackground": true,
            "dependsOrder": "sequence",
            "dependsOn": [
                "[Pre] Protobuf Refresh",
                "[Pre] Generate Go Code"
            ]
        },
        {
            "label": "[Misc] Test CLI - Create Room",
            "type": "shell",
            "command": "go",
            "problemMatcher": [
                "$go"
            ],
            "args": [
                "run",
                "-tags",
                "cli",
                ".",
                "createRoom"
            ],
            "options": {
                "cwd": "${workspaceFolder}/pkg/client"
            },
            "isBackground": true
        },
        {
            "label": "[Misc] Test CLI - Join Room",
            "type": "shell",
            "command": "go",
            "problemMatcher": [
                "$go"
            ],
            "args": [
                "run",
                "-tags",
                "cli",
                ".",
                "joinRoom",
                "-code=${input:roomCode}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/pkg/client"
            },
            "isBackground": true
        }
    ],
    "inputs": [
        {
            "id": "serverAddress",
            "description": "Server Address",
            "type": "pickString",
            "options": [
                "nukeship.passeriform.com:443",
                "crazy-dania-passeriform-2c88993e.koyeb.app:443",
                "localhost:50051"
            ],
            "default": "nukeship.passeriform.com:443"
        },
        {
            "id": "roomCode",
            "description": "Room code to join",
            "type": "promptString"
        }
    ]
}