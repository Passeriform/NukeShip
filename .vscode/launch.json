    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/pkg/server/",
            "env": {
                "GOPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Run Native Client",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/pkg/client/",
            "buildFlags": [
                "-tags",
                "cli"
            ],
            "env": {
                "GOPATH": "${workspaceFolder}",
                "SERVER_HOST": "https://nukeship.passeriform.com",
                "SERVER_PORT": "50051"
            },
            "args": [
                "createRoom"
            ]
        },
        {
            "name": "Run App Client",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "${workspaceFolder}/pkg/client/build/bin/NukeShip.exe",
            "preLaunchTask": "[App] Build Client",
        }
    ]
}